<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rl_introo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_data"


        android:layout_marginTop="@dimen/_2sdp">

        <RelativeLayout
            android:id="@+id/rl_intro"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/storyboard_adapter_view"


            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp">

                <EditText
                    android:id="@+id/tv_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="Introduction"
                    android:selectAllOnFocus="true"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/view"
                    android:textSize="@dimen/_12ssp">


                </EditText>

                <RelativeLayout
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/_10sdp"


                   >

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:background="@drawable/option_script"

                        >


                    </ImageView>
                </RelativeLayout>


                <View
                    android:id="@+id/vieww"
                    android:layout_width="match_parent"
                    android:layout_height="1.0dp"
                    android:layout_below="@id/view"

                    android:layout_marginTop="@dimen/_4sdp"

                    android:background="#4C4C4C">

                </View>

                <EditText
                    android:id="@+id/tv_write_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/vieww"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@null"
                    android:gravity="top"
                    android:selectAllOnFocus="true"
                    android:hint="Start writing here.."
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:textSize="@dimen/_11ssp">

                </EditText>


            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_storyboard_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="#9F9D9D">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/drop_down">

            </ImageView>


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>