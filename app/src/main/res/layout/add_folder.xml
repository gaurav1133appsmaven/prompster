<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <RelativeLayout
        android:layout_width="@dimen/_225sdp"
        android:layout_height="@dimen/_140sdp"
        android:background="@drawable/import_design"

     >

        <RelativeLayout
            android:id="@+id/rll_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp">


            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New Folder"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="@dimen/_16ssp"></TextView>

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New Folder"
                android:textColor="@color/black"
                android:layout_below="@+id/tv_title1"
                android:gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:visibility="gone"
                android:textSize="@dimen/_11ssp"></TextView>





        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_folderr"
            android:layout_below="@id/rll_folder"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_25sdp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="@drawable/search_button">


            <EditText
                android:id="@+id/et_folder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@null"
                android:inputType="textCapSentences"
                android:hint="Set Folder Name"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"></EditText>




        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_above="@id/rl_folderrr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey">

        </View>
        <View

            android:layout_below="@id/view"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/grey">

        </View>


        <RelativeLayout
            android:id="@+id/rl_folderrr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textStyle="bold"
                        android:textSize="@dimen/_16ssp"
                        android:textColor="#F6796A">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_okay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OK"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/_16ssp"
                        android:textColor="#F6796A">


                    </TextView>

                </LinearLayout>


            </LinearLayout>







        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>