                            android:layout_height="@dimen/_32sdp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:checked="false"
                            android:textOff=""
                            android:textOn=""
                            app:thumbTint="@color/white"
                            app:trackTint="@color/tracktint" />


                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>

