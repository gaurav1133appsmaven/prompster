<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:background="@drawable/import_design"

android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/rl_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         android:padding="@dimen/_5sdp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scriptively!"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="@dimen/_16ssp"></TextView>




        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_folderr"
            android:layout_below="@id/rl_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete the story board">

            </TextView>




        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_below="@id/rl_folderr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/app_color">

        </View>
        <View

            android:layout_below="@id/rl_folderr"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/app_color">

        </View>




        <RelativeLayout
            android:id="@+id/rl_folderrr"
            android:layout_below="@id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/tv_cancell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:gravity="center"


                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/app_color">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_okay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ok"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/app_color">


                    </TextView>

                </LinearLayout>


            </LinearLayout>







        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>