<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <RelativeLayout
        android:id="@+id/rl_script"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        >



        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/new_script">


        </ImageView>

        <TextView
            android:id="@+id/tv_akshay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_image"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="New Script"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </TextView>

        <ImageView
            android:id="@+id/ivvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/add_side_tab"
            android:layout_toRightOf="@id/tv_akshay">


        </ImageView>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_recent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/rl_script"
        android:layout_marginRight="@dimen/_10sdp"
        >



        <ImageView
            android:id="@+id/iv_imagee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/new_script">


        </ImageView>

        <TextView
            android:id="@+id/tv_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_imagee"
            android:layout_marginLeft="@dimen/_15sdp"
            android:text="Recent Scripts"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </TextView>




    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/rl_recent"
        android:layout_marginRight="@dimen/_10sdp"
        >



        <ImageView
            android:id="@+id/iv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/new_script">


        </ImageView>

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_welcome"
            android:layout_marginLeft="@dimen/_15sdp"
            android:text="Welcome to prompster"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </TextView>




    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/rl_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_45sdp"
        android:layout_below="@id/rl_welcome"
        android:layout_marginRight="@dimen/_10sdp"
        >



        <ImageView
            android:id="@+id/iv_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/new_script">


        </ImageView>

        <TextView
            android:id="@+id/tv_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_folder"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="All Scripts"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </TextView>




    </RelativeLayout>





    <RelativeLayout
        android:id="@+id/rl_folderss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/rl_folder"
        android:layout_marginRight="@dimen/_10sdp"
        >



        <ImageView
            android:id="@+id/iv_folders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/folder">


        </ImageView>

        <TextView
            android:id="@+id/tv_folders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_folders"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Folders"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp">

        </TextView>

        <ImageView
            android:layout_toRightOf="@id/tv_folders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/add_side_tab">


        </ImageView>




    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_below="@id/rl_folderss">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rl_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_public"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@id/rl_recycler"
        android:layout_marginRight="@dimen/_10sdp"
        android:visibility="gone">



        <ImageView
            android:id="@+id/iv_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/public_talk_folder">


        </ImageView>

        <TextView
            android:id="@+id/tv_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_public"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Public Talk"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp">

        </TextView>






    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="@dimen/_5sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        >



        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/new_script">


        </ImageView>

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_setting"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textColor="@color/white"
            android:text="Settings"
            android:textSize="@dimen/_13ssp">

        </TextView>






    </RelativeLayout>
</RelativeLayout>