<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.Script_Toolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/rl_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp">


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:background="@drawable/back" />

            <RelativeLayout
                android:id="@+id/rl_value"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_20sdp"

                android:layout_toRightOf="@id/image"
                android:background="@drawable/script_button2">


                <RelativeLayout
                    android:id="@+id/rl_data"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/script_button2"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Script"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp">

                    </TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_data1"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/script_button"
                        android:gravity="center"
                        android:text="Script"
                        android:textSize="@dimen/_12ssp">

                    </TextView>

                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/rl_data"
                    android:background="#E4DFDF">


                </View>


                <RelativeLayout
                    android:id="@+id/rl_data2"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/view"
                    android:background="@drawable/script_button2"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Story Board"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp">

                    </TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_data3"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:background="@drawable/script_button"
                    android:gravity="center"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Story Board"
                        android:textSize="@dimen/_14ssp">

                    </TextView>

                </RelativeLayout>

                <View
                    android:id="@+id/view_board"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/rl_data2"
                    android:background="#C6C6CD">


                </View>


                <RelativeLayout

                    android:id="@+id/rl_media"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_toRightOf="@+id/view_board"
                    android:background="@drawable/script_button2"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Media"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp">

                    </TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_media1"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@drawable/script_button"
                    android:gravity="center"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Media"
                        android:textSize="@dimen/_14ssp">

                    </TextView>

                </RelativeLayout>


            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_back"
            android:background="#C1BCBC"
            android:visibility="gone">


        </View>

        <RelativeLayout
            android:id="@+id/rl_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_back"
            android:background="@color/white">

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"

                android:layout_height="match_parent">

            </FrameLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_titile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/vieww"
            android:layout_below="@+id/rl_back"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/white"
            android:visibility="visible"
            tools:ignore="NotSibling">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="Title"
                    android:imeOptions="actionDone"

                    android:inputType="textMultiLine|textCapSentences"
                    android:textColor="@color/black"
                    android:textColorHint="#757B81"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold">


                </EditText>


                <EditText
                    android:id="@+id/et_tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="Start writing , copy and paste text from another app or.."
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine|textCapSentences"
                    android:textColor="@color/black"
                    android:textColorHint="#C6C6C6"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold">


                </EditText>


                <TextView
                    android:id="@+id/tv_import"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/gmail_button"
                    android:gravity="center"
                    android:text="Import Script"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold">


                </TextView>


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/vieww"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_65sdp"
        android:background="#000">

    </View>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_marginTop="@dimen/_30sdp">

        <RelativeLayout
            android:id="@+id/rl_tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            android:paddingVertical="@dimen/_25sdp">

            <ImageView
                android:id="@+id/iv_importalphabet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/text_style_inactive"
                android:visibility="invisible">

            </ImageView>

            <ImageView
                android:id="@+id/iv_export"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/option_script">

            </ImageView>

            <ImageView
                android:id="@+id/iv_exportt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_toLeftOf="@+id/iv_export"
                android:background="@drawable/az">

            </ImageView>

            <ImageView
                android:id="@+id/iv_import"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_45sdp"

                android:layout_toRightOf="@+id/iv_importalphabet"
                android:background="@drawable/text_style_inactive">

            </ImageView>

            <ImageView
                android:id="@+id/iv_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_45sdp"
                android:layout_toRightOf="@+id/iv_importalphabet"
                android:background="@drawable/text_style_active"
                android:visibility="invisible">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_tablayout"
            android:background="@color/white"
            android:visibility="gone">


            <RelativeLayout
                android:id="@+id/rl_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/rl_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Text Options"
                            android:textSize="@dimen/_14ssp">


                        </TextView>

                        <ImageView
                            android:id="@+id/iv_crosstext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/cross_text">


                        </ImageView>


                    </RelativeLayout>

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/grey">


                    </View>


                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_align"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_tv"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp">


                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/left_align">

                </ImageView>

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/right_align">

                </ImageView>

                <ImageView
                    android:id="@+id/iv_centre"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/center_align">

                </ImageView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_align"
                android:layout_marginTop="@dimen/_10sdp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp">


                    <TextView
                        android:id="@+id/tv_smalltext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/small_a">


                    </TextView>


                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_large"
                        android:layout_toRightOf="@+id/tv_smalltext"
                        android:progress="20"
                        android:progressDrawable="@drawable/custom_seekbar"
                        android:thumb="@drawable/custom_thumb">


                    </SeekBar>

                    <TextView
                        android:id="@+id/tv_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"

                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/large_a">


                    </TextView>

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_below="@id/rl_size"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_15sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/rl_colorname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp">


                        <ImageView
                            android:id="@+id/iv_red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/red">


                        </ImageView>

                        <ImageView
                            android:id="@+id/iv_darkyellow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toRightOf="@id/iv_red"
                            android:background="@drawable/orange">


                        </ImageView>


                        <ImageView
                            android:id="@+id/iv_yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toRightOf="@id/iv_darkyellow"
                            android:background="@drawable/yellow">


                        </ImageView>

                        <ImageView
                            android:id="@+id/iv_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toRightOf="@id/iv_yellow"
                            android:background="@drawable/green">


                        </ImageView>

                        <ImageView
                            android:id="@+id/iv_skyblue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toRightOf="@id/iv_green"
                            android:background="@drawable/light_blue">


                        </ImageView>

                        <ImageView
                            android:id="@+id/iv_purple"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toRightOf="@id/iv_skyblue"
                            android:background="@drawable/purple">


                        </ImageView>


                    </RelativeLayout>


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_10sdp"

                        >


                        <ImageView
                            android:id="@+id/iv_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/blue">


                        </ImageView>

                        <ImageView
                            android:id="@+id/iv_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toRightOf="@id/iv_blue"
                            android:background="@drawable/black">


                        </ImageView>


                        <ImageView
                            android:id="@+id/iv_darkgrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toRightOf="@id/iv_black"
                            android:background="@drawable/dark_gray">


                        </ImageView>

                        <ImageView
                            android:id="@+id/iv_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toRightOf="@id/iv_darkgrey"
                            android:background="@drawable/gray">


                        </ImageView>

                        <ImageView
                            android:id="@+id/iv_lightgray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toRightOf="@id/iv_gray"
                            android:background="@drawable/light_gray">


                        </ImageView>

                        <ImageView
                            android:id="@+id/iv_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toRightOf="@id/iv_lightgray"
                            android:background="@drawable/of_whiye">


                        </ImageView>


                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"


            android:background="@drawable/user_tab_active">

        </ImageView>


    </RelativeLayout>


</RelativeLayout>